<?xml version="1.0"?>
<block>
  <name>GFDM Advanced Receiver (SB)</name>
  <key>gfdm_advanced_receiver_sb_cc</key>
  <category>[GFDM]</category>
  <import>import gfdm</import>
  <make>gfdm.advanced_receiver_sb_cc($timeslots, $subcarriers, $overlap, $ic_iter, $frequency_taps, $constellation, $subcarrier_map, $do_phase_compensation)</make>
  <callback>set_ic($ic_iter)</callback>
  <callback>set_phase_compensation($do_phase_compensation)</callback>
  <param>
    <name>M timeslots</name>
    <key>timeslots</key>
    <value>16</value>
    <type>int</type>
  </param>
  <param>
    <name>N subcarriers</name>
    <key>subcarriers</key>
    <value>16</value>
    <type>int</type>
  </param>
  <param>
    <name>L overlap</name>
    <key>overlap</key>
    <value>2</value>
    <type>int</type>
  </param>
  <param>
    <name>Ic_iter</name>
    <key>ic_iter</key>
    <value>16</value>
    <type>int</type>
  </param>
  <param>
    <name>Frequency domain taps</name>
    <key>frequency_taps</key>
    <type>raw</type>
  </param>

  <param>
    <name>Constellation</name>
    <key>constellation</key>
    <type>raw</type>
  </param>
  <param>
    <name>subcarrier map</name>
    <key>subcarrier_map</key>
    <type>raw</type>
  </param>
  <param>
    <name>Do phase compensation</name>
    <key>do_phase_compensation</key>
    <value>0</value>
    <type>int</type>
  </param>


  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>eq</name>
    <type>complex</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
